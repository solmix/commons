<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bundles</artifactId>
    <groupId>org.solmix.bundles</groupId>
    <version>0.5.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>org.solmix.bundles.thumbnailator</artifactId>
  <packaging>bundle</packaging>
  <name>Solmix :: Bundles :: Thumbnailator</name>
  <version>0.4.8</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>${pkgGroupId}:${pkgArtifactId}</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>${pkgGroupId}:${pkgArtifactId}</artifact>
                  <excludes>
                    <exclude>**</exclude>
                  </excludes>
                </filter>
              </filters>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
              <createDependencyReducedPom>true</createDependencyReducedPom>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <pkgVersion>0.4.8</pkgVersion>
    <pkgArtifactId>thumbnailator</pkgArtifactId>
    <solmix.osgi.export>net.coobird*</solmix.osgi.export>
    <pkgGroupId>net.coobird</pkgGroupId>
    <solmix.category>coobird</solmix.category>
    <solmix.osgi.import.pkg>*</solmix.osgi.import.pkg>
    <solmix.osgi.failok>true</solmix.osgi.failok>
  </properties>
</project>

