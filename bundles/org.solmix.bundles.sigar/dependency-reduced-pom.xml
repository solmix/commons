<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bundles</artifactId>
    <groupId>org.solmix.bundles</groupId>
    <version>0.5.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>org.solmix.bundles.sigar</artifactId>
  <packaging>bundle</packaging>
  <name>Solmix :: Bundles :: Sigar Bundle</name>
  <version>1.6.4</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>${pkgGroupId}:${pkgArtifactId}</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>${pkgGroupId}:${pkgArtifactId}</artifact>
                  <excludes>
                    <exclude>**</exclude>
                  </excludes>
                </filter>
              </filters>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
              <createDependencyReducedPom>true</createDependencyReducedPom>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.15</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <solmix.category>mchange</solmix.category>
    <pkgVersion>1.6.4</pkgVersion>
    <solmix.osgi.dynamic.import>*</solmix.osgi.dynamic.import>
    <solmix.osgi.import.pkg>junit.framework;resolution:=optional,
    junit.textui;resolution:=optional,
    org.apache.tools.ant;resolution:=optional,
	org.apache.tools.ant.taskdefs;resolution:=optional,
    	*</solmix.osgi.import.pkg>
    <pkgGroupId>org.fusesource</pkgGroupId>
    <solmix.osgi.failok>true</solmix.osgi.failok>
    <pkgArtifactId>sigar</pkgArtifactId>
    <solmix.osgi.private.pkg>org.hyperic.jni</solmix.osgi.private.pkg>
    <solmix.osgi.export>org.hyperic.sigar*;-noimport:=true</solmix.osgi.export>
  </properties>
</project>

