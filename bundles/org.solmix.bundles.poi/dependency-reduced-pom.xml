<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bundles</artifactId>
    <groupId>org.solmix.bundles</groupId>
    <version>0.5.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>org.solmix.bundles.poi</artifactId>
  <packaging>bundle</packaging>
  <name>Solmix :: Bundles :: Apache POI</name>
  <version>4.0.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>${pkgGroupId}:${pkgArtifactId}</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>${pkgGroupId}:${pkgArtifactId}</artifact>
                  <excludes>
                    <exclude>**</exclude>
                  </excludes>
                </filter>
              </filters>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
              <createDependencyReducedPom>true</createDependencyReducedPom>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.11</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-collections4</artifactId>
      <version>4.2</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <solmix.category>apache</solmix.category>
    <pkgVersion>4.0.0</pkgVersion>
    <solmix.osgi.dynamic.import>*</solmix.osgi.dynamic.import>
    <solmix.osgi.import.pkg>org.apache.commons.math3*;resolution:=optional,*</solmix.osgi.import.pkg>
    <pkgGroupId>org.apache.poi</pkgGroupId>
    <solmix.osgi.failok>true</solmix.osgi.failok>
    <pkgArtifactId>poi</pkgArtifactId>
    <solmix.osgi.export>org.apache.poi*</solmix.osgi.export>
  </properties>
</project>

